<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">
    <changeSet id="createUserTable" author="trungtd18">
        <preConditions onFail="WARN">
            <not>
                <tableExists tableName="user"/>
            </not>
        </preConditions>
        <createTable tableName="user">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="street" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="suite" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="zipcode" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="lat" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="lng" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="phone" type="varchar(11)">
                <constraints nullable="false"/>
            </column>
            <column name="website" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="companyName" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="catchPhrase" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="bs" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>